job('NodeJS Docker Generated By Job DSL') {
    scm {
        git('https://github.com/pqdau/first-jenkins-app.git', 'master')
    }
    wrappers {
        nodejs('NodeJs')
    }
    steps {
        shell("npm install")
        dockerBuildAndPublish {
            repositoryName('pqdau/nodejs-demo-with-docker')
            tag('${GIT_REVISION,length=9}')
            registryCredentials('dockerhub-account')
            forcePull(false)
            forceTag(false)
       }
    }
}
